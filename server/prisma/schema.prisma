generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  //id       String @id @default(uuid())
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullname String
  email    String @unique
  password String

  otp_secret  String?
  otp_authurl String?

  otp_enabled   Boolean @default(false)
  otp_validated Boolean @default(false)
}
